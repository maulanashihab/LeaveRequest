                    <Label x:Name="label2" Content="End Date" HorizontalAlignment="Left" Margin="35,88,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label3" Content="Status" HorizontalAlignment="Left" Margin="34,122,0,0" VerticalAlignment="Top"/>
