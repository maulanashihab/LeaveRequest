                            <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Total Day" Binding="{Binding Path= TotalDay }"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Path= Descritpion}"/>
