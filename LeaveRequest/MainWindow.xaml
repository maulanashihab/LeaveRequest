                    <TextBox x:Name="approverCommentstxtBox" HorizontalAlignment="Left" Height="23" Margin="202,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="statustxtBox1" HorizontalAlignment="Left" Height="23" Margin="202,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <ComboBox x:Name="idEmployeecmbBox" DisplayMemberPath="Id" SelectedValuePath="Id" HorizontalAlignment="Left" Margin="485,53,0,0" VerticalAlignment="Top" Width="120"/>
                    <ComboBox x:Name="idLeaveCategorycmbBox" HorizontalAlignment="Left" Margin="485,85,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="label9" Content="Id Employee" HorizontalAlignment="Left" Margin="379,50,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label10" Content="Id Leave Category" HorizontalAlignment="Left" Margin="380,85,0,0" VerticalAlignment="Top"/>

