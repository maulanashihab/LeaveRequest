                    <Label x:Name="label51" Content="Form Leave Category" HorizontalAlignment="Left" Margin="85,9,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>

                </Grid>
            </TabItem>



            <TabItem Header="Transaction Leave Request">
                <Grid Background="#FFE5E5E5" Margin="0,0,-41,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="labela" Content="" HorizontalAlignment="Left" Margin="22,38,0,0" VerticalAlignment="Top" Height="22" Width="14"/>
                    <Label x:Name="label1b" Content="Id" HorizontalAlignment="Left" Margin="42,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.9,0.795"/>
                    <Label x:Name="labelv" Content="From Date" HorizontalAlignment="Left" Margin="42,76,0,0" VerticalAlignment="Top"/>
