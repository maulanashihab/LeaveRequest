                    </DataGrid>
                    <Label x:Name="labellr" Content="Form Leave Request" HorizontalAlignment="Left" Margin="85,9,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
                    <Label x:Name="label7" Content="Approver Comments" HorizontalAlignment="Left" Margin="42,164,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label8" Content="Status" HorizontalAlignment="Left" Margin="42,195,0,0" VerticalAlignment="Top"/>
                    <DatePicker HorizontalAlignment="Left" Margin="202,85,0,0" VerticalAlignment="Top" Width="120"/>
